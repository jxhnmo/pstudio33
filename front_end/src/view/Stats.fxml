<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>


<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.StatsController">
	<center>
	    <Label text="This is the Statistsics Page" />
	</center>
	<bottom>
	    <HBox alignment="CENTER" spacing="10" style="-fx-background-color: white " prefHeight="100.0">
	        <Button text="Sign Out" fx:id="btnSignOut" onAction="#handleSignOff" minWidth="150.0" minHeight="70.0"/>
	        <Button text="Menu" fx:id="btnMenu" onAction="#goToMenu" minWidth="150.0" minHeight="70.0"/>
	        <Button text="Statistics" fx:id="btnStatistics" onAction="#goToStatistics" minWidth="150.0" minHeight="70.0"/>
	        <Button text="Inventory" fx:id="btnInventory" onAction="#goToInventory" minWidth="150.0" minHeight="70.0"/>
	        <Pane HBox.hgrow="ALWAYS"/> <!-- This pane will take up the remaining space -->
	        <!-- The rightmost space is left empty for now -->
	    </HBox>
	</bottom>
</BorderPane>
